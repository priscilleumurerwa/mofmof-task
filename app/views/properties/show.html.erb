<p id="notice"><%= notice %></p>
<div class="prop">
<h1><b>Property Details</b></h1>
<p>
  <strong>Property:</strong>
  <%= @property.property %>
</p>

<p>
  <strong>Rent:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>Adress:</strong>
  <%= @property.adress %>
</p>

<p>
  <strong>Building age:</strong>
  <%= @property.building_age %>
</p>

<p>
  <strong>Remarks:</strong>
  <%= @property.remarks %>
</p>
</div>

 
<% @property.stations.each do |poor| %>
  <% if @property.id == poor.property_id %>
    <h2><b>Nearest station </b></h2>
    <p>
      <strong>Name of railway line:</strong>
      <%= poor.name_of_railway_line %>
    </p>

    <p>
      <strong>Statation name:</strong>
      <%= poor.statation_name %>
    </p>

    <p>
      <strong>How many minutes walks:</strong>
      <%= poor.how_many_minutes_walks %>
    </p>
  <% end %>
<% end %>
<div class="links">
  <%= link_to 'Edit', edit_property_path(@property) %> |
  <%= link_to 'Back', properties_path %>
</div>
